<?xml version="1.0" encoding="UTF-8"?>
<window>
    <animation effect="fade" time="500" start="0" end="100">WindowOpen</animation>
    <animation effect="fade" time="500" start="100" end="0">WindowClose</animation>
    <controls>
        <control type="image">
            <description>luna logo</description>
            <top>50</top>
            <left>50</left>
            <width>100</width>
            <height>50</height>
            <aspectratio>keep</aspectratio>
            <texture>common/luna.png</texture>
        </control>
        <!-- System Clock widget is copied from the old OSMC skin to match their location -->
        <control type="label">
            <right>47</right>
            <top>44</top>
            <width>800</width>
            <height>40</height>
            <align>right</align>
            <label>$INFO[System.Time]</label>
            <font>Large</font>
            <textcolor>ColorHeading</textcolor>
        </control>
        <control type="label">
            <right>47</right>
            <top>88</top>
            <width>800</width>
            <height>33</height>
            <align>right</align>
            <label>$INFO[System.Date]</label>
            <font>XSmall</font>
            <textcolor>ColorDetails</textcolor>
        </control>
        <control type="image" id="2">
            <description>background image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <fadetime>200</fadetime>
            <texture colordiffuse="50D3D3D3"></texture>
        </control>
        <control type="image" id="1">
            <top>150</top>
            <left>10</left>
            <width>330</width>
            <height>330</height>
            <aspectratio>keep</aspectratio>
            <fadetime>200</fadetime>
            <texture></texture>
        </control>
        <control type="scrollbar" id="61">
            <left>1180</left>
            <top>150</top>
            <width>10</width>
            <height>520</height>
            <onleft>50</onleft>
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
            <texturesliderbackground colordiffuse="22ffffff" border="3">common/scrollbar_v.png</texturesliderbackground>
            <texturesliderbar colordiffuse="ColorNF" border="3">common/scrollbar_v.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="ColorFO" border="3">common/scrollbar_v.png</texturesliderbarfocus>
            <textureslidernib>-</textureslidernib>
            <textureslidernibfocus>-</textureslidernibfocus>
        </control>
        <control type="list" id="50">
            <left>330</left>
            <top>150</top>
            <bottom>100</bottom>
            <width>850</width>
            <height>520</height>
            <visible>true</visible>
            <viewtype label="3D list">list</viewtype>
            <onright>61</onright>
            <orientation>vertical</orientation>
            <pagecontrol>61</pagecontrol>
            <scrolltime tween="sine" easing="out">200</scrolltime>
            <itemlayout width="850" height="55">
                <control type="label">
                    <left>30</left>
                    <top>0</top>
                    <width>750</width>
                    <height>47</height>
                    <font>Small</font>
                    <aligny>top</aligny>
                    <textcolor>FF808080</textcolor>
                    <selectedcolor>green</selectedcolor>
                    <align>left</align>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="850" height="55">
                <control type="label">
                    <left>30</left>
                    <top>0</top>
                    <width>750</width>
                    <height>47</height>
                    <font>Small</font>
                    <aligny>top</aligny>
                    <textcolor>FFE0B074</textcolor>
                    <selectedcolor>green</selectedcolor>
                    <align>left</align>
                    <info>ListItem.Label</info>
                </control>
                <control type="label">
                    <left>30</left>
                    <top>30</top>
                    <width>750</width>
                    <height>22</height>
                    <font>font13</font>
                    <selectedcolor>FFE0B074</selectedcolor>
                    <textcolor>grey</textcolor>
                    <align>left</align>
                    <info>ListItem.Genre</info>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>